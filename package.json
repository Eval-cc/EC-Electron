{
    "name": "ec-electron",
    "version": "1.0.0",
    "description": "EC框架 一个基于Electron的跨平台桌面应用",
    "main": "./out/main/index.js",
    "author": {
        "name": "eval",
        "email": "eval-email@qq.com"
    },
    "homepage": "https://space.bilibili.com/389439013",
    "scripts": {
        "format": "prettier --write .",
        "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
        "typecheck:node": "vue-tsc --noEmit -p tsconfig.node.json --composite false",
        "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
        "typecheck": "npm run typecheck:node && npm run typecheck:web",
        "start": "chcp 65001 && electron-vite preview",
        "dev": "chcp 65001 && npm run pre:load && electron-vite dev",
        "encryp": "node ./src/bin/@ec_encryp/index.mjs",
        "clear": "node ./src/bin/@ec_clear/index.mjs",
        "pre:load": "node ./src/bin/@ec_preload_child/index.mjs",
        "build": "npm run typecheck && electron-vite build && npm run pre:load",
        "postinstall": "electron-builder install-app-deps",
        "build:unpack": "npm run build && electron-builder --config=build-config/builder.json --dir",
        "build:win": "npm run build && npm run encryp && electron-builder --config=build-config/builder.json -w=nsis --win",
        "build:mac": "npm run build && npm run encryp && electron-builder --config=build-config/builder.json --mac",
        "build:linux": "npm run build && npm run encryp && electron-builder --config=build-config/builder.json --linux",
        "build:wz": "npm run build  && npm run encryp && electron-builder  --config=build-config/builder.json  -w=7z --win"
    },
    "dependencies": {
        "@electron-toolkit/preload": "^3.0.0",
        "@electron-toolkit/utils": "^3.0.0",
        "adm-zip": "^0.5.12",
        "electron-edge-js": "^33.0.0",
        "electron-log": "^5.1.2",
        "electron-updater": "^6.1.7",
        "electron-vite": "^2.3.0",
        "element-plus": "^2.7.2",
        "fast-csv": "^5.0.1",
        "iconv-lite": "^0.6.3",
        "javascript-obfuscator": "^4.1.0",
        "koffi": "^2.9.1",
        "mysql2": "^3.9.4",
        "node-notifier": "^10.0.1",
        "papaparse": "^5.4.1",
        "pnpm": "^9.12.2",
        "socket.io-client": "^4.7.5",
        "tsc": "^2.0.4",
        "vue-router": "^4.3.0",
        "vue-tsc": "^2.1.10",
        "vuex": "^4.1.0"
    },
    "devDependencies": {
        "@electron-toolkit/eslint-config": "^1.0.2",
        "@electron-toolkit/eslint-config-ts": "^1.0.1",
        "@electron-toolkit/tsconfig": "^1.0.1",
        "@rushstack/eslint-patch": "^1.7.1",
        "@types/adm-zip": "^0.5.5",
        "@types/node": "^18.19.9",
        "@types/node-notifier": "^8.0.5",
        "@vitejs/plugin-vue": "^5.0.3",
        "@vue/eslint-config-prettier": "^9.0.0",
        "@vue/eslint-config-typescript": "^12.0.0",
        "electron": "^32.2.2",
        "electron-builder": "^22.6.0",
        "eslint": "^8.56.0",
        "eslint-plugin-vue": "^9.20.1",
        "less": "^4.2.0",
        "prettier": "^3.2.4",
        "typescript": "^5.6.3",
        "vite": "^5.0.12",
        "vue": "^3.4.15"
    }
}
