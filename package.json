{
    "name": "ec-electron",
    "version": "1.0.0",
    "description": "EC框架 一个基于Electron的跨平台桌面应用框架",
    "main": "./out/main/index.js",
    "author": {
        "name": "@eval",
        "email": "eval-email@qq.com"
    },
    "homepage": "https://space.bilibili.com/389439013",
    "scripts": {
        "format": "prettier --write .",
        "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
        "typecheck:node": "vue-tsc --noEmit -p tsconfig.node.json --composite false",
        "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
        "typecheck": "npm run typecheck:node && npm run typecheck:web",
        "start": "chcp 65001 && electron-vite preview",
        "dev": "chcp 65001 && electron-vite dev",
        "encryp": "node ./ec-electron/bin/@ec_encryp/index.mjs",
        "clear": "node ./ec-electron/bin/@ec_clear/index.mjs",
        "pre:load": "node ./ec-electron/bin/@ec_preload_child/index.mjs",
        "build": "npm run typecheck && electron-vite build",
        "postinstall": "electron-builder install-app-deps",
        "build:upgrade":"npm run build && node ./ec-electron/bin/@ec_upgrade/index.mjs",
        "build:unpack": "npm run build && electron-builder --dir",
        "build:win": "npm run build && npm run encryp && electron-builder -w=nsis --win",
        "build:mac": "npm run build && npm run encryp && electron-builder --mac",
        "build:linux": "npm run build && npm run encryp && electron-builder --linux",
        "build:wz": "npm run build  && npm run encryp && electron-builder   -w=7z --win"
    },
    "dependencies": {
        "@electron-toolkit/preload": "^3.0.0",
        "@electron-toolkit/utils": "^3.0.0",
        "@types/node-cron": "^3.0.11",
        "@vitejs/plugin-vue": "^5.0.3",
        "adm-zip": "^0.5.12",
        "auto-launch": "^5.0.6",
        "electron-log": "^5.1.2",
        "electron-updater": "^6.1.7",
        "electron-vite": "^2.3.0",
        "element-plus": "^2.9.5",
        "iconv-lite": "^0.6.3",
        "javascript-obfuscator": "^4.1.0",
        "mysql2": "^3.9.4",
        "node-cron": "^3.0.3",
        "node-notifier": "^10.0.1",
        "pinia": "^3.0.1",
        "pnpm": "^9.12.2",
        "tsc": "^2.0.4",
        "vite-plugin-electron": "^0.28.8",
        "vue-router": "^4.5.0",
        "vue-tsc": "^2.1.10"
    },
    "devDependencies": {
        "@electron-toolkit/eslint-config": "^1.0.2",
        "@electron-toolkit/eslint-config-ts": "^1.0.1",
        "@electron-toolkit/tsconfig": "^1.0.1",
        "@rushstack/eslint-patch": "^1.7.1",
        "@types/adm-zip": "^0.5.5",
        "@types/auto-launch": "^5.0.5",
        "@types/node": "^18.19.9",
        "@types/node-notifier": "^8.0.5",
        "electron": "^29.4.6",
        "electron-builder": "^22.6.0",
        "eslint": "^8.56.0",
        "less": "^4.2.0",
        "prettier": "^3.2.4",
        "typescript": "^5.6.3"
    }
}
