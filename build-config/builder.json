{
    "productName": "EC Framework",
    "appId": "com.ec.eval",
    "copyright": "© 2024 eval. All rights reserved.",
    "directories": {
        "output": "dist",
        "buildResources": "build"
    },
    "asar": true,
    "asarUnpack": false,
    "files": {
        "filter": [
            "**/*",
            "!node_modules/*",
            "!resources/texture/*",
            "!.vscode/*",
            "!*.eslintignore",
            "!*.editorconfig",
            "!pnpm-lock.yml",
            "!*.yaml",
            "!*.npmrc",
            "!*.md",
            "!.prettierignore",
            "!.prettierrc",
            "!tsconfig.json",
            "!tsconfig.*.json",
            "!src/renderer/*",
            "!src/*/*.ts",
            "!*.mjs",
            "!src/bin/@zfs_encryp/*",
            "!src/bin/@zfs_preload_child/*",
            "!build-config/*",
            "!ec-logs/*"
        ]
    },
    "extraResources": [
        {
            "from": "build/extraResources/",
            "to": "extraResources"
        },
        {
            "from": "resources/assets/",
            "to": "assets/"
        },
        {
            "from": "src/bin/ec.config.json",
            "to": "ec.config.json"
        }
    ],
    "nsis": {
        "oneClick": false,
        "allowElevation": true,
        "allowToChangeInstallationDirectory": true,
        "installerIcon": "./resources/assets/icon.ico",
        "uninstallerIcon": "./resources/assets/icon.ico",
        "installerHeaderIcon": "./resources/assets/icon.ico",
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "shortcutName": "EC框架"
    },
    "mac": {
        "icon": "./resources/assets/icon.ico",
        "artifactName": "${productName}-${os}-${version}-${arch}.${ext}",
        "darkModeSupport": true,
        "hardenedRuntime": false
    },
    "win": {
        "artifactName": "${productName}-${os}-${version}-${arch}.${ext}",
        "target": ["nsis"],
        "icon": "./resources/assets/icon.ico",
        "compression": "maximum",
        "signingHashAlgorithms": ["sha1", "sha256"],
        "requestedExecutionLevel": "requireAdministrator"
    },
    "linux": {
        "icon": "./resources/assets/linux-icon.ico",
        "artifactName": "${productName}-${os}-${version}-${arch}.${ext}",
        "target": ["deb"],
        "category": "Utility"
    }
}
