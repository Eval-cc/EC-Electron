{
    "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
    "include": [
        "src/renderer/src/env.d.ts",
        "src/renderer/src/**/*.vue",
        "src/renderer/src/**/*.ts",
        "src/renderer/src/**/*.png",
        "src/renderer/src/store/*.ts",
        "src/renderer/src/router/*.ts",
        "src/renderer/src/utils/*.ts",
        "src/preload/*.d.ts"
    ],
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "paths": {
        "@renderer/*": [
            "src/renderer/src/*"
        ]
        }
    }
}
